<h1><%= @post.title %> | <small>Votes: <%= @post.votes %></small></h1>

<h3><%= link_to @post.link, @post.link %></h3>
<h3>Posted by <%= @post.author %></h3>

<p><%= link_to 'Edit Post', edit_post_path %></p>
<p><%= link_to 'Delete Post', post_path(@post), :data => {
  :confirm => 'Are you sure?',
  :method => 'Delete'
  } %></p>

<hr>

<h2>Comments</h2>

<% if @post.comments.any? %>
  <% @post.comments.each do |comment| %>
    <div class="comment-body">
      <p>Author: <%= comment.author %></p>
      <p>Date: <%= comment.created_at %></p>
      <p><%= comment.content %></p>
      <%= link_to 'Edit', edit_post_comment_path(@post, comment), :class => 'btn btn-outline-primary btn-sm' %>
      <%= link_to 'Delete', post_comment_path(@post, comment), :data => {
        :confirm => 'Are you sure?',
        :method => 'Delete'
        },
        :class => 'btn btn-outline-danger btn-sm' %>
      <hr>
    </div>

  <% end %>
<% else %>
  <p>No comments yet.</p>
<% end %>
