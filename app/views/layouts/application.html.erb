<!DOCTYPE html>
<html>
  <head>
    <title>HackerNews</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <div class="jumbotron text-center">
        <h1>Hacker News</h1>
      </div>
      <%= flash[:alert] %>
      <%= flash[:notice] %>
      <%= yield %>
    </div>

  </body>
</html>
